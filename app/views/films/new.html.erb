<h1>Crear Pelicula</h1>

<%= form_for @film do |f| %>
<div class="form-group">
  <%= f.text_field :name , class: "form-control", placeholder: "Ingresa el nombre de la pelicula"%>
</div>
<div class="form-group">
  <%= f.text_field :description , class: "form-control", placeholder: "Ingresa la descripción"%>
</div>
<div class="form-group">
  <%= f.text_field :url , class: "form-control", placeholder: "Ingresa la url de la imágen"%>
</div>
<div class="form-group">
  <%= f.date_field :presentation , class: "form-control", placeholder: "Ingresa la fecha"%>
</div>
<div>
  <%= f.submit "Agregar pelicula" %>
</div>
<% end %>
