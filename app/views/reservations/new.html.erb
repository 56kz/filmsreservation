<h1>Crear Reserva<h1>

<%= form_for @reservation do |r| %>
<div class="form-group">
  <%= r.date_field :day, class: "form-control", placeholder: "Ingresa la fecha de la reserva"%>
</div>
<div class="form-group">
  <%= r.text_field :identification, class: "form-control", placeholder: "Ingresa tú número de cédula"%>
</div>
<div class="form-group">
  <%= r.text_field :name, class: "form-control", placeholder: "Ingresa tú nombre"%>
</div>
<div class="form-group">
  <%= r.text_field :email, class: "form-control", placeholder: "Ingresa tú email"%>
</div>
<div class="form-group">
  <%= r.text_field :cellphone, class: "form-control", placeholder: "Ingresa tú número de celular"%>
</div>
<div class="form-group">
  <%= r.text_field :film_id, class: "form-control", placeholder: "Ingresa la pelicula"%>
</div>

  <% if :film_id == 1%>
  <div>
    <%= r.submit "Agregar Reserva" %>
  </div>
  <% end %>



<% end %>
